{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "index.ts",
    "extractors/**/*.ts",
    "tests/**/*.ts",
    "public/**/*.ts",
    "tests/testData.spec.ts"
  ]
}